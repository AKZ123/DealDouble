@model DealDouble.Web.ViewModels.UsersDetailViewModel
@{
    ViewBag.Title = "userDatails";
    //Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (Model != null && Model.Users != null)
{
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Full Name</label>
            <div class="col-sm-10">
                <input name="FullName" type="text" class="form-control" value="@Model.Users.FullName" required />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Country</label>
            <div class="col-sm-10">
                <input name="Country" type="text" class="form-control" value="@Model.Users.Country" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-10">
                <input name="City" type="text" class="form-control" value="@Model.Users.City" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                <input name="Address" type="text" class="form-control" value="@Model.Users.Address"/>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input name="Email" type="text" class="form-control" value="@Model.Users.Email" required readonly disabled/>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">UserName</label>
            <div class="col-sm-10">
                <input name="UserName" type="text" class="form-control" value="@Model.Users.UserName" required readonly disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="btn-group float-right" role="group">
                    <button type="button" class="btn btn-success"><i class="fas fa-edit"></i> Update</button>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="alert alert-danger" role="alert">
        No User found.
    </div>
}


